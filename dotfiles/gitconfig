[push]

    # Use the Git 1.x.x default to avoid errors on machines with old Git
    # installations. To use `simple` instead, prompt in your terminal:
    #
    #       % git config --global push.default simple
    #
    # Also check out: http://git.io/mMah-w
    default = matching

[hub]

    # Use https protocol when cloning through `hub` command, because this
    # always works. The SSH version requirs ssh-agent to be installed.
    #
    # More about hub: http://hub.github.com/
    protocol= https


[alias]

    # display a nice git tree
    tree    = log --graph --decorate --pretty=oneline --abbrev-commit
